@using KeepetFinal.Models.Entities
@model Pet

@{
    ViewData["Title"] = "ویرایش حیوان";
}

<div class="container">
    <h2 class="mb-4">ویرایش حیوان</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Name" class="form-label">نام</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Type" class="form-label">نوع حیوان</label>
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Breed" class="form-label">نژاد</label>
            <input asp-for="Breed" class="form-control" />
            <span asp-validation-for="Breed" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Age" class="form-label">سن</label>
            <input asp-for="Age" type="number" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Weight" class="form-label">وزن</label>
            <input asp-for="Weight" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-warning">ذخیره تغییرات</button>
        <a href="@Url.Action("Index", "Pets")" class="btn btn-secondary">بازگشت</a>
    </form>
</div>
